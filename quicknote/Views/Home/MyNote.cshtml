@model quicknote.Models.Note

<div class="form-horizontal">
    <h4>Note</h4>
    <hr />    
    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title" , @disabled = "disabled" } })          
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @placeholder = "Content", @rows = "10" , @disabled = "disabled" })
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("New QuickNote", "Index")
</p>
